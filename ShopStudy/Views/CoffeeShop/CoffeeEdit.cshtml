@model CoffeeShopViewModel
@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<div class="container">
    <div class="col-md-4">
        <form asp-action="CoffeeEdit" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductCategory" class="control-label"></label>
                <input asp-for="ProductCategory" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductCost" class="control-label"></label>
                <input asp-for="ProductCost" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductRating" class="control-label"></label>
                <input asp-for="ProductRating" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductSale" class="control-label"></label>
                <input asp-for="ProductSale" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Storage" class="control-label"></label>
                <input asp-for="Storage" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>